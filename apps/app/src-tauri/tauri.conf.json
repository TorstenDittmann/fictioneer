{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "omnia",
	"version": "0.1.1",
	"identifier": "com.omnia.dev",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun run vite:dev",
		"beforeBuildCommand": "bun run vite:build"
	},
	"app": {
		"windows": [
			{
				"title": "omnia",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"decorations": false,
				"shadow": false,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"transparent": true
			}
		],
		"macOSPrivateApi": true,
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
